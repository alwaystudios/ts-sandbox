{
  "name": "ts-sandbox",
  "version": "1.0.0",
  "repository": "git@github.com:alwaystudios/ts-sandbox.git",
  "author": "Alwaystudios Ltd.",
  "license": "MIT",
  "scripts": {
    "test": "jest maxWorkers=4 src",
    "lint": "tslint --project tsconfig.json 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.{js,ts,json,md}'",
    "build": "tsc --project tsconfig.json",
    "types": "type-coverage --detail"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn format && yarn test --coverage",
      "pre-push": "yarn build && yarn types"
    }
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.22",
    "@types/p-limit": "^2.2.0",
    "@types/p-map": "^2.0.0",
    "@types/ramda": "^0.27.36",
    "@types/shortid": "^0.0.29",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "type-coverage": "^2.14.9",
    "typescript": "^4.1.3",
    "wait-for-expect": "^3.0.2"
  },
  "dependencies": {
    "p-limit": "^3.1.0",
    "queue-fifo": "^0.2.6",
    "ramda": "^0.27.1",
    "shortid": "^2.2.16"
  }
}
